<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.purplebutterfly.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_splashFragment_to_landingPageFragment"
            app:destination="@id/landingPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.purplebutterfly.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_landingPageFragment"
            app:destination="@id/landingPageFragment" />
        <action
            android:id="@+id/action_logInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_logInFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_logInFragment_to_organisationFragment"
            app:destination="@id/organisationFragment" />
    </fragment>
    <fragment
        android:id="@+id/landingPageFragment"
        android:name="com.example.purplebutterfly.LandingPageFragment"
        android:label="fragment_landing_page"
        tools:layout="@layout/fragment_landing_page" >
        <action
            android:id="@+id/action_landingPageFragment_to_occupationalTherapistFragment"
            app:destination="@id/occupationalTherapistFragment" />
        <action
            android:id="@+id/action_landingPageFragment_to_physiotherapistFragment"
            app:destination="@id/physiotherapistFragment" />
        <action
            android:id="@+id/action_landingPageFragment_to_speechtherapistFragment"
            app:destination="@id/speechtherapistFragment" />
        <action
            android:id="@+id/action_landingPageFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.purplebutterfly.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/occupationalTherapistFragment"
        android:name="com.example.purplebutterfly.OccupationalTherapistFragment"
        android:label="fragment_occupational_therapist"
        tools:layout="@layout/fragment_occupational_therapist" />
    <fragment
        android:id="@+id/physiotherapistFragment"
        android:name="com.example.purplebutterfly.PhysiotherapistFragment"
        android:label="fragment_physiotherapist"
        tools:layout="@layout/fragment_physiotherapist" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.purplebutterfly.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_landingPageFragment"
            app:destination="@id/landingPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/speechtherapistFragment"
        android:name="com.example.purplebutterfly.SpeechtherapistFragment"
        android:label="fragment_speechtherapist"
        tools:layout="@layout/fragment_speechtherapist" />
    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.purplebutterfly.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" >
        <action
            android:id="@+id/action_adminFragment_to_landingPageFragment"
            app:destination="@id/landingPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/organisationFragment"
        android:name="com.example.purplebutterfly.OrganisationFragment"
        android:label="fragment_organisation"
        tools:layout="@layout/fragment_organisation" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.purplebutterfly.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/groupChatFragment"
        android:name="com.example.purplebutterfly.GroupChatFragment"
        android:label="fragment_group_chat"
        tools:layout="@layout/fragment_group_chat" />
    <fragment
        android:id="@+id/privateChatFragment"
        android:name="com.example.purplebutterfly.PrivateChatFragment"
        android:label="fragment_private_chat"
        tools:layout="@layout/fragment_private_chat" />
    <fragment
        android:id="@+id/statusFragment"
        android:name="com.example.purplebutterfly.StatusFragment"
        android:label="fragment_status"
        tools:layout="@layout/fragment_status" />
</navigation>